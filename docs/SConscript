Import("env")

# handle css
env.Install("$datadir/$package/docs/css", "filespec/stylesheets/filespec.css")

# handle images
images = []
images += env.PIC2Graph("filespec/images/diagram-encryption.png", "filespec/images/diagram-encryption.pic")
images += env.PIC2Graph("filespec/images/diagram-fileformat.png", "filespec/images/diagram-fileformat.pic")

env.Install("$datadir/$package/docs/images", images)

# handle filespec xhtml
filespec_xhtml	= env.XSLTProc("filespec/xhtml/index.html", env.Substitute([
	"filespec/stylesheets/xhtml.xsl.in",
]) + [
	"filespec/filespec.xml",
])

env.Install("$datadir/$package/docs/xhtml", filespec_xhtml)


# handle filespec xhtml-chunks
filespec_xhtmlc	= env.XSLTProc("filespec/xhtml-chunks/index.html", env.Substitute([
	"filespec/stylesheets/xhtml-chunks.xsl.in",
]) + [
	"filespec/filespec.xml",
])

filespec_xhtmlc += env.SideEffect([
	"filespec/xhtml-chunks/accounttypes.html",
	"filespec/xhtml-chunks/encryption.html",
	"filespec/xhtml-chunks/xml.html",
], filespec_xhtmlc)

env.Install("$datadir/$package/docs/xhtml-chunks", filespec_xhtmlc)

