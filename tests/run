from __future__ import absolute_import

import os
import sys
import types

sys.path.insert(0, "%s/.." % os.path.dirname(__file__))
sys.path.insert(0, "%s/../build/src" % os.path.dirname(__file__))

testsuites = []

if len(sys.argv) == 1:
	from tests.TestSuite import TestSuite

	testsuites.append(TestSuite)

else:
	try:
		for module in sys.argv[1:]:
			exec "from tests.%s import TestSuite" % module

			if type(TestSuite) is types.ModuleType:
				TestSuite = TestSuite.TestSuite

			testsuites.append(TestSuite)

	except ImportError:
		sys.stderr.write("Unknown test module %s\n" % sys.argv[1])
		sys.exit(1)

for testsuite in testsuites:
	testsuite().execute()

